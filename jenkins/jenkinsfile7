pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/vishwas8535/sample-java-app.git'
            }
        }

        stage('Deploy to NGINX') {
            steps {
                sh '''
                  echo "Deploying website..."
                  cp -r * /var/www/mywebsite/
                '''
            }
        }
    }

    post {
        success {
            echo 'Deployment successful! Visit your NGINX server.'
        }
    }
}
